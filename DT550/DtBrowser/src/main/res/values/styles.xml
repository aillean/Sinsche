<resources>

    <!-- Base application theme. -->
    <style name="DtAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DtToolBarStyle">
        <!--Remove Toolbar Default left margin.
        ref:http://stackoverflow.com/questions/26455027/android-api-21-toolbar-padding-->
        <item name="contentInsetStart">0dp</item>
        <item name="popupTheme">@style/DtAppCompat.ToolBar.Popup</item>
        <item name="theme">@style/DtAppCompat.ToolBar</item>
        <item name="android:background">@drawable/bar_bg</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:id">@id/tool_bar</item>
        <item name="titleTextAppearance">@style/DtAppCompat.TextAppearance.AppCompat.Title</item>
    </style>

    <style name="DtAppCompat.ToolBar.Popup" parent="DtAppTheme"> 
        <item name="android:textSize">20sp</item>
         <item name="selectableItemBackground">@drawable/dividing_line</item> 
        <item name="itemBackground">@drawable/dividing_line</item> 
        <item name="android:itemBackground">@drawable/dividing_line</item>
         <item name="android:selectableItemBackground">@drawable/dividing_line</item> 
    </style>

    <style name="Device_sub_title_text" parent="DtAppTheme"> 
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="DtAppCompat.ToolBar" parent="DtAppTheme"> 
        <item name="selectableItemBackground">@drawable/dividing_line</item> 
        <item name="android:selectableItemBackground">@drawable/dividing_line</item> 
        <item name="colorPrimary">@android:color/black</item>
    </style>

    <style name="DtAppCompat.TextAppearance.AppCompat.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Device_Layout">
        <item name="android:elevation">10dp</item>
    </style>

    <style name="Device_title_Layout">
        <item name="android:layout_marginTop">@dimen/device_layout_marginTop</item>
        <item name="android:layout_marginLeft">@dimen/contextview_item_margin</item>
        <item name="android:layout_marginRight">@dimen/contextview_item_margin</item>
        <item name="android:layout_width">@dimen/device_layout_width</item>
        <item name="android:layout_height">@dimen/device_titlelayout_height</item>
    </style>


    <style name="Device_Grad_Layout">
        <item name="android:layout_width">@dimen/device_layout_width</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Device_footer_Layout">
        <item name="android:layout_width">@dimen/device_layout_width</item>
        <item name="android:layout_height">@dimen/device_titlelayout_height</item>
    </style>

    <style name="measureu_item_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="measureu_item_layout_brakgue">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:colorControlHighlight">#daeefb</item>
    </style>


    <style name="measure_item_liquid_state_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/measure_item_liquid_state_text_hight</item>
        <item name="android:layout_marginLeft">@dimen/measure_item_liquid_state_text_margin_left</item>
        <item name="android:layout_marginTop">@dimen/measure_item_liquid_state_text_margin_top</item>
        <item name="android:paddingLeft">@dimen/measure_item_liquid_state_text_padding_l_or_r</item>
        <item name="android:paddingRight">@dimen/measure_item_liquid_state_text_padding_l_or_r
        </item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="measure_item_name_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="measure_item_value_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">#fda185</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/measure_item_value_text_margin_top</item>
    </style>

    <style name="measure_item_time_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">#b4b5b5</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginBottom">@dimen/measure_item_time_text_margin_bottom</item>
    </style>

</resources>
